{
	"manifest_version": 3,
	"name": "Meeting Intelligence Companion",
	"description": "Chrome extension skeleton for the Meeting Intelligence Platform.",
	"version": "0.2.0",
	"minimum_chrome_version": "114",
	"permissions": ["tabs", "activeTab", "storage"],
	"host_permissions": [
		"https://meet.google.com/*",
		"http://localhost:9000/*"
	],
	"background": {
		"service_worker": "background/index.js",
		"type": "module"
	},
	"action": {
		"default_popup": "popup/index.html",
		"default_title": "Meeting Intelligence"
	},
	"content_scripts": [
		{
			"matches": ["https://meet.google.com/*"],
			"js": ["content/meet.js"],
			"run_at": "document_idle"
		}
	],
    "web_accessible_resources": [
    {
        "resources": ["utils/meetDetector.js"],
        "matches": ["https://meet.google.com/*"]
    }
    ]
}
