# Firebase Admin SDK Service Account Path
# Path to your Firebase service account JSON file
# Download from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT_PATH=./service-account.json

# API Configuration
API_HOST=127.0.0.1
API_PORT=9000

# Third-party integrations
SLACK_SIGNING_SECRET=replace-with-slack-secret
GITHUB_TOKEN=replace-with-github-token
DEFAULT_GITHUB_REPO=chinmay1p/GDG-NU-2026

# Optional CORS configuration (comma-separated origins)
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
# Regex fallback for additional local origins
CORS_ALLOW_ORIGIN_REGEX=https?://(localhost|127\.0\.0\.1)(:\d+)?
